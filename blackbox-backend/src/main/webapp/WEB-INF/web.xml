<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

  <display-name>Blackbox Backend Server</display-name>
	<servlet>
		<servlet-name>jersey</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>jp.ats.blackbox.api</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.scanning.recursive</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>jersey</servlet-name>
		<url-pattern>/v1/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>transactionFilter</filter-name>
		<filter-class>jp.ats.blackbox.web.BlendeeTransactionFilter</filter-class>
		<init-param>
			<param-name>schema-names</param-name>
			<param-value>bb</param-value>
		</init-param>
		<init-param>
			<param-name>enable-log</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>log-stacktrace-filter</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>transaction-factory-class</param-name>
			<param-value>org.blendee.jdbc.DataSourceTransactionFactory</param-value>
		</init-param>
		<init-param>
			<param-name>can-add-new-entries</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>error-converter-class</param-name>
			<param-value>org.blendee.dialect.postgresql.PostgreSQLErrorConverter</param-value>
		</init-param>
		<init-param>
			<param-name>home-storage-identifier</param-name>
			<param-value>blackbox-core</param-value>
		</init-param>
		<init-param>
			<param-name>use-lazy-transaction</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>logger-class</param-name>
			<param-value>org.blendee.jdbc.SystemOutLogger</param-value>
		</init-param>
		<init-param>
			<param-name>table-facade-package</param-name>
			<param-value>jp.ats.blackbox.blendee</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>transactionFilter</filter-name>
		<url-pattern>/v1/*</url-pattern>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>blackbox</web-resource-name>
			<url-pattern>/v1/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>public</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>Blackbox Backend</realm-name>
	</login-config>

	<security-role>
		<role-name>user</role-name>
	</security-role>

	<resource-ref>
		<res-ref-name>jdbc/datasource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
</web-app>
